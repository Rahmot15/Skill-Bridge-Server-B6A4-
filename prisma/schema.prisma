generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum Role {
  ADMIN
  LEARNER
  TUTOR
}

enum BookingStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(LEARNER)
  createdAt DateTime @default(now())

  tutorProfile TutorProfile?
  skills       Skill[]
  learnerBookings Booking[] @relation("LearnerBookings")
  tutorBookings   Booking[] @relation("TutorBookings")
}

model TutorProfile {
  id      String @id @default(uuid())
  userId  String @unique

  user User @relation(fields: [userId], references: [id])
}

model Skill {
  id      String @id @default(uuid())
  title   String
  tutorId String

  tutor User @relation(fields: [tutorId], references: [id])
  bookings Booking[]
}

model Booking {
  id        String @id @default(uuid())
  learnerId String
  tutorId   String
  skillId   String

  learner User @relation("LearnerBookings", fields: [learnerId], references: [id])
  tutor   User @relation("TutorBookings", fields: [tutorId], references: [id])
  skill   Skill @relation(fields: [skillId], references: [id])
}
