model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(LEARNER)
  createdAt DateTime @default(now())

  tutorProfile    TutorProfile?
  skills          Skill[]
  learnerBookings Booking[] @relation("LearnerBookings")
  tutorBookings   Booking[] @relation("TutorBookings")
}

enum Role {
  ADMIN
  LEARNER
  TUTOR
}
